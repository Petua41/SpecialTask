<?xml version="1.0" encoding="utf-8" ?>
<commands>
  <!-- I should add some kind of easter egg. Like moo or draw_logo -->
  
	<!-- new -->
	<command userInput="new circle" 
           commandClass="CreateCircle" 
           supportsUndo="true">
    Adds circle to the screen
		<argument shortArgument="x"
              longArgument="center_x" type="Int"
              isNecessary="true"
              commandParameterName="centerX"
              description="X of center" />
    <argument shortArgument="y"
              longArgument="center_y" type="Int"
              isNecessary="true"
              commandParameterName="centerY"
              description="Y of center" />
    <argument shortArgument="C"
              longArgument="color" type="Color"
              isNecessary="true"
              commandParameterName="color"
              description="Outline color" />
    <argument shortArgument="r"
              longArgument="radius" type="Int"
              isNecessary="true"
              commandParameterName="radius"
              description="Radius" />
    <argument shortArgument="t"
              longArgument="line_thickness"
              type="Int" isNecessary="true"
              commandParameterName="lineThickness"
              description="Outline thickness" />
    <argument shortArgument="s"
              longArgument="streak"
              commandParameterName="streak"
              defaultValue="false"
              description="Add streak (default is false)" /> 
    <argument shortArgument="c"
              longArgument="streak_color"
              type="Color"
              commandParameterName="streakColor"
              defaultValue="None"
              description="Streak color (default is transparent)" />
    <argument shortArgument="T"
              longArgument="texture"
              type="Texture"
              commandParameterName="streakTexture"
              defaultValue="None"
              description="Streak texture (default is transparent)" />
	</command>
  
	<command userInput="new rectangle" 
           commandClass="CreateSquare" 
           supportsUndo="true">
    Adds rectangle to the screen
    <argument shortArgument="x"
              longArgument="left_top_x"
              type="Int"
              isNecessary="true"
              commandParameterName="leftTopX"
              description="X of left-top corner" />
    <argument shortArgument="y"
              longArgument="left_top_y"
              type="Int"
              isNecessary="true"
              commandParameterName="leftTopY"
              description="Y of left-top corner" />
    <argument shortArgument="X"
              longArgument="right_bottom_x"
              type="Int"
              isNecessary="true"
              commandParameterName="rightBottomX"
              description="X of right-bottom corner" />
    <argument shortArgument="Y"
              longArgument="right_bottom_y"
              type="Int"
              isNecessary="true"
              commandParameterName="rightBottomY"
              description="Y of right-bottom corner" />
    <argument shortArgument="C"
              longArgument="color"
              type="Color"
              isNecessary="true"
              commandParameterName="color"
              description="Outline color" />
    <argument shortArgument="t"
              longArgument="line_thickness"
              type="Int"
              isNecessary="true"
              commandParameterName="lineThickness"
              description="Outline thickness" />
    <argument shortArgument="s"
              longArgument="streak"
              commandParameterName="streak"
              defaultValue="false"
              description="Add streak (default is false)" />
    <argument shortArgument="c"
              longArgument="streak_color"
              type="Color"
              commandParameterName="streakColor"
              defaultValue="None"
              description="Streak color (default is transparent)" />
    <argument shortArgument="T"
              longArgument="texture"
              type="Texture"
              commandParameterName="streakTexture"
              defaultValue="None"
              description="Streak texture (default is transparent)" />
	</command>
  
	<command userInput="new line" 
           commandClass="CreateLine" 
           supportsUndo="true">
    Adds line to the screen
    <argument shortArgument="x"
              longArgument="first_x"
              type="Int"
              isNecessary="true"
              commandParameterName="firstX"
              description="X of first point" />
    <argument shortArgument="y"
              longArgument="first_y"
              type="Int"
              isNecessary="true"
              commandParameterName="firstY"
              description="Y of first point" />
    <argument shortArgument="X"
              longArgument="second_x"
              type="Int"
              isNecessary="true"
              commandParameterName="secondX"
              description="X of second point" />
    <argument shortArgument="Y"
              longArgument="second_y"
              type="Int"
              isNecessary="true"
              commandParameterName="secondY"
              description="Y of second point" />
    <argument shortArgument="C"
              longArgument="color"
              type="Color"
              isNecessary="true"
              commandParameterName="color"
              description="Line color" />
    <argument shortArgument="t"
              longArgument="line_thickness"
              type="Int"
              isNecessary="true"
              commandParameterName="lineThickness"
              description="Line thickness" />
    <argument shortArgument="s"
              longArgument="streak"
              commandParameterName="streak"
              defaultValue="false"
              description="Add streak (no effect, default is false)" />
    <argument shortArgument="c"
              longArgument="streak_color"
              type="Color"
              commandParameterName="streakColor"
              defaultValue="None"
              description="Streak color (no effect, default is transparent)" />
    <argument shortArgument="T"
              longArgument="texture"
              type="Texture"
              commandParameterName="streakTexture"
              defaultValue="None"
              description="Streak texture (no effect, default is transparent)" />
	</command>
  
  <command userInput="new text" 
           commandClass="CreateText" 
           supportsUndo="true">
    Adds text to the screen
    <argument shortArgument="x"
              longArgument="left_top_x"
              type="Int"
              isNecessary="true"
              commandParameterName="leftTopX"
              description="X of left-top corner" />
    <argument shortArgument="y"
              longArgument="left_top_y"
              type="Int"
              isNecessary="true"
              commandParameterName="leftTopY"
              description="Y of left-top corner" />
    <argument shortArgument="f"
              longArgument="font_size"
              type="Int"
              isNecessary="true"
              commandParameterName="fontSize"
              description="Font size" />
    <argument shortArgument="t"
              longArgument="text"
              type="String"
              isNecessary="true"
              commandParameterName="textValue"
              description="Text value" />
    <argument shortArgument="C"
              longArgument="color"
              type="Color"
              isNecessary="true"
              commandParameterName="color"
              description="Color of text" />
    <argument shortArgument="s"
              longArgument="streak"
              commandParameterName="streak"
              defaultValue="false"
              description="Add streak (no effect, default is false)" />
    <argument shortArgument="c"
              longArgument="streak_color"
              type="Color"
              commandParameterName="streakColor"
              defaultValue="None"
              description="Streak color (no effect, default is transparent)" />
    <argument shortArgument="T"
              longArgument="texture"
              type="Texture"
              commandParameterName="streakTexture"
              defaultValue="None"
              description="Streak texture (no effect, default is transparent)" />
  </command>
  
  <command userInput="new polygon" 
           commandClass="CreatePolygon" 
           supportsUndo="true">
    Adds polygon to the screen
    <argument shortArgument="p"
              longArgument="points"
              type="Points"
              isNecessary="true"
              commandParameterName="points"
              description="Points (X and Y are separated by a space, pairs are separated by a comma, e. g. X1 Y1, X2 Y2)" />
    <argument shortArgument="C"
              longArgument="color"
              type="Color"
              isNecessary="true"
              commandParameterName="color"
              description="Outline color" />
    <argument shortArgument="t"
              longArgument="line_thickness"
              type="Int"
              isNecessary="true"
              commandParameterName="lineThickness"
              description="Outline thickness" />
    <argument shortArgument="s"
              longArgument="streak"
              commandParameterName="streak"
              defaultValue="false"
              description="Add streak (default is false)" />
    <argument shortArgument="c"
              longArgument="streak_color"
              type="Color"
              commandParameterName="streakColor"
              defaultValue="None"
              description="Streak color (default is transparent)" />
    <argument shortArgument="T"
              longArgument="texture"
              type="Texture"
              commandParameterName="streakTexture"
              defaultValue="None"
              description="Streak texture (default is transparent)" />
  </command>
  
	<!-- window -->
	<command userInput="window create" 
           commandClass="CreateWindow">
    Creates new window to draw
  </command>
  
	<command userInput="window delete" 
           commandClass="DeleteWindow">
    Closes specified window
    <argument shortArgument="n"
              longArgument="number"
              isNecessary="true"
              type="Int"
              commandParameterName="number"
              description="Number of window (from window title)" />
	</command>
  
	<command userInput="window switch" 
           commandClass="SwitchWindow">
    Switches to specified window
    <argument shortArgument="n"
              longArgument="number"
              isNecessary="true"
              type="Int"
              commandParameterName="number"
              description="Number of window (from window title)" />
	</command>
  
	<!-- edit -->
	<command userInput="edit" 
           commandClass="Edit" 
           supportsUndo="true">
    Select figure on the screen and edit it
    <argument shortArgument="t"
              longArgument="creation_time"
              commandParameterName="creationTime"
              defaultValue="true"
              description=" Display figures in creation-time order (default)" />
    <argument shortArgument="c"
              longArgument="coordinates"
              commandParameterName="coordinates"
              defaultValue="false"
              description="Display figures by ascending coordinates of the center" />
	</command>
  
	<!-- select -->
	<command userInput="select" 
           commandClass="Select">
    Selects rectangular area, specified by coordinates of left-top and right-bottom corners
    <argument shortArgument="x"
              longArgument="left_top_x"
              type="Int"
              isNecessary="true"
              commandParameterName="leftTopX"
              description="X of left-top corner" />
    <argument shortArgument="y"
              longArgument="left_top_y"
              type="Int"
              isNecessary="true"
              commandParameterName="leftTopY"
              description="Y of left-top corner" />
    <argument shortArgument="X"
              longArgument="right_bottom_x"
              type="Int"
              isNecessary="true"
              commandParameterName="rightBottomX"
              description="X of right-bottom corner" />
    <argument shortArgument="Y"
              longArgument="right_bottom_y"
              type="Int"
              isNecessary="true"
              commandParameterName="rightBottomY"
              description="Y of right-bottom corner" />
	</command>
  
  <!-- paste -->
  <command userInput="paste" 
           commandClass="Paste" 
           supportsUndo="true">
    Pastes selected area
    <argument shortArgument="x"
              longArgument="leftTopX"
              type="Int"
              isNecessary="true"
              commandParameterName="leftTopX"
              description="X of left-top corner" />
    <argument shortArgument="y"
              longArgument="leftTopY"
              type="Int"
              commandParameterName="leftTopY"
              description="Y of left-top corner" />
  </command>
  
	<!-- undo -->
	<command userInput="undo" 
           commandClass="Undo">
    Cancels last commands
    <argument shortArgument="n"
              longArgument="number"
              type="Int"
              commandParameterName="number"
              defaultValue="1"
              description="Number of commands to undo (default is 1)" />
	</command>
  
	<!-- redo -->
	<command userInput="redo" 
           commandClass="Redo">
    Repeats last cancelled commands
    <argument shortArgument="n"
              longArgument="number"
              type="Int"
              commandParameterName="number"
              defaultValue="1"
              description="Number of commands to redo (default is 1)" />
	</command>
  
	<!-- save -->
	<command userInput="save" 
           commandClass="Save">
    Save file
  </command>
  
	<!-- save_as -->
	<command userInput="save_as" 
           commandClass="SaveAs">
    Save file as
    <argument shortArgument="f"
              longArgument="filename"
              isNecessary="true"
              type="String"
              commandParameterName="filename"
              description="Name of file to save (if path is relative, saves to default save directory)" />
	</command>
  
	<!-- load -->
	<command userInput="load" 
           commandClass="Load">
    Load file
    <argument shortArgument="f"
              longArgument="filename"
              type="String"
              isNecessary="true"
              commandParameterName="filename"
              description="Name of file to save  (if path is relative, saves to default save directory)" />
    <argument shortArgument="c"
              longArgument="clear"
              defaultValue="false"
              commandParameterName="clearScreen"
              description="Clear screen before loading (default is false)" />
	</command>
  
  <!-- exit -->
  <command userInput="exit" 
           commandClass="Exit">
    Close application
  </command>
  
  <!-- colors -->
  <command userInput="colors" 
           commandClass="Colors">
    Display list of colors (colored)
  </command>
  
  <!-- textures -->
  <command userInput="textures" 
           commandClass="Textures">
    Display list of streak textures (with descriptions)
  </command>
  
  <!-- clear -->
  <command userInput="clear" 
           commandClass="Clear" 
           supportsUndo="true">
    Clear current screen
  </command>
  
  <!-- export -->
  <command userInput="export svg" 
           commandClass="ExportSVG">
    Export to svg
    <argument shortArgument="i"
              longArgument="in"
              type="String"
              commandParameterName="inFilename"
              defaultValue=""
              description="Name of (.std) file to export (if not specified, exports current drawing)" />

    <argument shortArgument="o"
              longArgument="out"
              type="String"
              isNecessary="true"
              commandParameterName="outFilename"
              description="Name of (.svg) file to export to" />
  </command>
  
  <command userInput="export pdf" 
           commandClass="ExportPDF">
    Export to pdf (experimental)
    <argument shortArgument="i"
            longArgument="in"
            type="String"
            commandParameterName="inFilename"
            defaultValue=""
            description="Name of (.std) file to export (if not specified, exports current drawing)" />
    <argument shortArgument="o"
            longArgument="out"
            type="String"
            isNecessary="true"
            commandParameterName="outFilename"
            description="Name of (.pdf) file to export to" />
  </command>
  
  <!-- screenshot -->
  <command userInput="screenshot" 
           commandClass="Screenshot">
    Captures a screenshot of current drawing window and saves to .png (experimental)
      <argument shortArgument="f"
                longArgument="filename"
                type="String"
                isNecessary="true"
                commandParameterName="filename"
                description="Name of file to save screenshot" />
</command>

	<!-- fictional commands -->
	<command userInput="new" 
           fictional="true">
    Adds specified shape to the screen. You cannot invoke this command without specifying shape

[color:Magenta]Shapes:[color]
	circle
	rectangle
	line
	text
	polygon

Enter [color:Green]new shape --help[color] to get help on [color:Green]shape[color]
  </command>
  
	<command userInput="window" 
           fictional="true">
    Controls windows. You cannot invoke this command without specifying concrete action
[color:Magenta]Possible commands:[color]
	create
	switch
	delete
  </command>
  
  <command userInput="export" 
           fictional="true">
    Export to other formats. You cannot invoke this command without specifying file format
[color:Magenta]Availible formats:[color]
	SVG
	PDF
  </command>
	
