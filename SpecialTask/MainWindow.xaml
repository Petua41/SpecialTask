<Window x:Class="SpecialTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecialTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <RichTextBox x:Name="ConsoleRTB" Background="#FF171717" BorderBrush="{x:Null}" 
                 CaretBrush="#FFFFF500" Foreground="White" SelectionTextBrush="Black" SelectionBrush="#FF8A8A8A" 
                 FontFamily="Consolas" FontSize="14" IsUndoEnabled="False" AcceptsTab="True" AutoWordSelection="False"
                 ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto" TextChanged="ConsoleRTBInput">
        <FlowDocument>
            <Paragraph>
                <Run Text="Have much fun!>>"/>
            </Paragraph>
        </FlowDocument>
    </RichTextBox>
</Window>
